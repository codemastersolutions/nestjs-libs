{
  "compilerOptions": {
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "resolvePackageJsonExports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2023",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": true,
    "strictBindCallApply": true,
    "noFallthroughCasesInSwitch": true,
    "paths": {
      "@cms-nestjs-libs/better-auth": ["libs/better-auth/src"],
      "@cms-nestjs-libs/better-auth/*": ["libs/better-auth/src/*"]
    }
  },
  "include": ["src/**/*", "libs/**/*", "test/**/*"],
  "exclude": [
    "node_modules",
    "changelog.config.js",
    "commitlint.config.js",
    "**/jest.config.cjs",
    "scripts/conventional-commits.js",
    "scripts/version-manager.js",
    "scripts/simulate-release.js"
  ]
}
